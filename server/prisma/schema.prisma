
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User{
  UId String @id @default(uuid())
  URoll String @unique
  UName String
  UPassword String
  UPhone String @db.Char(11)
  URole Role @default(Student)
}

model Class{
  title String @unique


}
model Exam{
  Eid String @id @default(uuid())
  Edescription String @db.Text
  EName String
  EDate DateTime
}

model Course{

  id String @id @default(uuid())
  title String @unique
  syllabus String @db.Text
  // students Student @relation(fields: [studentId],references: [id])
  studentId String


}

enum Role{
  Student
  Teacher
  Admin
}
