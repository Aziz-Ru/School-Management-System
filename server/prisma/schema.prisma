
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User{
  id String @id @default(uuid())
  roll String @unique
  name String
  password String
  phone String @db.Char(11)
  role Role @default(Student)
}

model Class{
  title String @unique

}

model Course{

  id String @id @default(uuid())
  title String @unique
  syllabus String @db.Text
  // students Student @relation(fields: [studentId],references: [id])
  studentId String


}

enum Role{
  Student
  Teacher
  Admin
}
